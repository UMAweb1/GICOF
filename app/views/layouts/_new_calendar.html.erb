<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
	<div class="modal-header">
		<div class="modal-title"><h3>Add Calendar</h3></div>
	</div>
	<%= form_with(model:new_event, url:events_path) do |f| %>
  	<div class="modal-body form-group">
      <% if event.errors.any? %>
        <div class="alert alert-warning">
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
  		<div class="field game_title">
  			<%= f.label :game_title %><br/>
	  		<%= f.text_field :title, class:"form-control" %>
  		</div>
  		<div class="field game_content">
  			<%= f.label :game_content %><br/>
  			<%= f.text_area :description, class:"form-control" %>
  		</div>
  		<div class="field start_time">
  			<%= f.label :start_time %><br/>
  			<%= f.datetime_field :start, class:"form-control" %>
  		</div>
  		<div class="field end_time">
  			<%= f.label :end_time %><br/>
  			<%= f.datetime_field :end, class:"form-control" %>
  		</div>
  	</div>
  	<div class="modal-footer">
	    <div class="actions">
	    	<%= f.submit "追加する", class:"btn btn-sm btn-outline-dark" %>
	    </div>
  	</div>
	<% end %>
  </div>
</div>