<div class="container">
  <div class="row registration_body" id="body">
    <div class="header">
      <h3>　Sign Up</h3>
    </div>
    <div class="form-group">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="table table-sm table-hover">
              <tbody>
                <tr>
                  <div class="field">
                    <th>
                      <%= f.label :name %><br/>
                      <span><small>※ユーザーには表示されません</small></span><br/>
                    </th>
                    <td>
                      <%= f.text_field :first_name, placeholder: "firstname(姓)", class:"form-control" %>
                      <%= f.text_field :last_name, placeholder: "firstname(名)", class:"form-control" %>
                      <br /><br />
                      <%= f.text_field :first_name_kana, placeholder: "firstname(セイ)", class:"form-control" %>
                      <%= f.text_field :last_name_kana, placeholder: "firstname(メイ)", class:"form-control" %>
                    </td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :nickname %></th>
                    <td><%= f.text_field :nickname, :size=>"46", placeholder: "○○文字以内", class:"form-control" %></td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :residence %></th>
                    <td><%= f.select :prefecture, User.prefectures.keys, {prompt: '都道府県'}, class:"form-control" %>
                    <br /><br />
                    <%= f.text_field :active_area, :size=>"46", :size=>"46", placeholder: "主な活動範囲", class:"form-control" %></td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :birthday %></th>
                    <td>
                      <%= raw sprintf(
                              f.date_select(
                                :birthday,
                                use_month_numbers: true,
                                start_year: 1970,
                                end_year: (Time.now.year - 18),
                                default: Date.new(1995, 1, 1),
                                date_separator: '%s'),
                              '年 ', '月 ') + '日' %>
                    </td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :email %></th>
                    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :password %></th>
                    <td>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                    </td>
                  </div>
                </tr>
                <tr>
                  <div class="field">
                    <th><%= f.label :password_confirmation %></th>
                    <td>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                    </td>
                  </div>
                </tr>
              </tbody>
            </table>
          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-outline-dark" %>
        <% end %>
      </div>






    </div>
  </div>
</div>
