<div class="container">
	<div class="row dms_body" id="body">
		<div class="header">
			<h3>　DM Users</h3>
		</div>
		<div class="dms_all">
			<% @entry_users.each do |entry| %>
				<div class="dms_users">
					<div class="dms_user_img col-4">
						<%= attachment_image_tag entry.user, :image_profile, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", id:"image_profile" %>
					</div>
					<div class="dms_user_content col-8">
						<div class="dms_user_top">
							<%= link_to entry.user.nickname, user_path(entry.user) %><span>　/　</span>
							<%= link_to "DMを始める", room_path(entry.room), class:"btn btn-sm btn-outline-dark" %>
						</div>
						<div class="dms_user_bottom d-block text-truncate">
							<%= entry.room.messages.last.content %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
